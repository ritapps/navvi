{
    "name": "blah",
    "version": "0.1",
    "description": "blah",
    "permissions": [
        "activeTab",
        "http://*/*",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "build/content-script.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "background": {
        "scripts": [
            "index.js",
            "build/content-script.js"
        ],
        "persistent": false
    },
    "manifest_version": 2
}